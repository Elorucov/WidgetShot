<Application
    x:Class="WidgetShot.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WidgetShot"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <controls:XamlControlsResources>
            <controls:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <SolidColorBrush x:Key="TransparentBrush" Color="#00000000"/>
                            <SolidColorBrush x:Key="WidgetBackgroundBrush" Color="#333"/>
                            <SolidColorBrush x:Key="WidgetTextBrush" Color="#FFF"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="TransparentBrush" Color="#00000000"/>
                            <SolidColorBrush x:Key="WidgetBackgroundBrush" Color="#FFF"/>
                            <SolidColorBrush x:Key="WidgetTextBrush" Color="#E4000000"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
    </Application.Resources>
</Application>
